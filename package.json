{
  "name": "@Sup3r-Us3r/express-internationalization",
  "version": "1.1.1",
  "description": "A lib to perform internationalization the simple way with Express",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Sup3r-Us3r/express-internationalization",
  "author": "Mayderson Mello <maydersonmello@gmail.com>",
  "license": "MIT",
  "keywords": [
    "express",
    "express-internationalization",
    "i18n",
    "translation",
    "translate",
    "internationalization-middleware"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/Sup3r-Us3r"
  },
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles"
  },
  "jest": {
    "bail": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "preset": "ts-jest",
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}
